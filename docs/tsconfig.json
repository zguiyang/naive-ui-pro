{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "allowJs": false,
    "strict": true,
    "moduleResolution": "bundler",
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "sourceMap": false,
    "outDir": "dist",
    "declaration": true,
    "baseUrl": ".",
    "paths": {
      "@naive-ui-pro/*": ["../src/*"],
    },
  },
  "include": ["**/*", ".vitepress/**/*"],
  "exclude": ["node_modules"],
}
