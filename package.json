{
  "name": "naive-ui-pro",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "dev": "pnpm --filter dev-server dev",
    "build": "vite build -c vite.build.ts",
    "lint:build": "vue-tsc && vite build -c vite.build.ts",
    "build:utils": "pnpm --filter build-utils build",
    "lint": "eslint . --ext .ts,.tsx,.vue,.js,.jsx",
    "fix": "eslint . --ext .vue,.js,.ts,.jsx,.tsx --fix",
    "format": "prettier --write \"./**/*.{js,ts,tsx,jsx,json,css,scss}\"",
    "prepare": "husky install",
    "lint-staged": "lint-staged",
    "cz": "git-cz",
    "clean:dist": "rimraf dist"
  },
  "main": "lib/index.js",
  "module": "esm/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./esm/index.d.ts",
      "import": "./esm/index.js",
      "require": "./lib/index.js"
    },
    "./es": {
      "types": "./esm/index.d.ts",
      "import": "./esm/index.js"
    },
    "./lib": {
      "types": "./dist/index.d.ts",
      "require": "./lib/index.js"
    },
    "./es/*.js": {
      "types": "./esm/*.d.ts",
      "import": "./esm/*.js"
    },
    "./es/*": {
      "types": [
        "./esm/*.d.ts",
        "./esm/*/index.d.ts"
      ],
      "import": "./es/*.mjs"
    },
    "./lib/*.js": {
      "types": "./lib/*.d.ts",
      "require": "./lib/*.js"
    },
    "./lib/*": {
      "types": [
        "./lib/*.d.ts",
        "./lib/*/index.d.ts"
      ],
      "require": "./lib/*.js"
    },
    "./package.json": "./package.json",
    "./*": "./*"
  },
  "files": [
    "dist",
    "README.md",
    "package.json"
  ],
  "dependencies": {
    "lodash-es": "^4.17.21",
    "vue": "^3.3.11"
  },
  "devDependencies": {
    "@naive-ui-pro/build-utils": "workspace:*",
    "@commitlint/cli": "^18.5.0",
    "@commitlint/config-conventional": "^18.5.0",
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^20.11.5",
    "@typescript-eslint/eslint-plugin": "^6.4.0",
    "@vitejs/plugin-vue": "^4.5.2",
    "@vitejs/plugin-vue-jsx": "^3.1.0",
    "@vue/compiler-sfc": "^3.4.15",
    "autoprefixer": "^10.4.17",
    "commitizen": "^4.3.0",
    "cz-git": "^1.8.0",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-config-standard-with-typescript": "^43.0.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-n": "^15.0.0 || ^16.0.0 ",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-promise": "^6.0.0",
    "eslint-plugin-vue": "^9.20.1",
    "fast-glob": "^3.3.2",
    "husky": "^8.0.0",
    "lint-staged": "^15.2.0",
    "naive-ui": "^2.37.3",
    "normalize.css": "^8.0.1",
    "postcss": "^8.4.33",
    "prettier": "3.2.4",
    "rimraf": "^5.0.5",
    "sass": "^1.70.0",
    "sass-loader": "^14.0.0",
    "typescript": "^5.3.3",
    "vfonts": "^0.0.3",
    "vite": "^5.0.8",
    "vite-plugin-dts": "^3.7.1",
    "vue-eslint-parser": "^9.4.2",
    "vue-tsc": "^1.8.25"
  },
  "lint-staged": {
    "*.{js,ts,tsx,jsx,json,css,scss}": "npm run format",
    "*.{js,ts,tsx,jsx,vue}": "npm run fix"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-git",
      "czConfig": "./commitlint.config.cjs"
    }
  }
}
